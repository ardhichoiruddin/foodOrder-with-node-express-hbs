{{> adminHeader }}
<div class="card shadow mb-4">

    {{#each foods}}
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit {{ this.nama_produk }}</h6>
        </div>
        <div class="card-body">

            <div class="row">

                <div class="col-md-8">

                    <form action="/admin/foodmenu/update/{{ this.id_produk }}" method="POST">
                    
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nama</label>
                                <input type="text" name="nama" class="form-control" value="{{ this.nama_produk }}">
                            </div>
                             <div class="form-group">
                                <label for="exampleInputEmail1">Gambar</label>
                                <br>
                                <img src="/uploads/{{ this.food_image }}" alt="" width="200px">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Kategori</label>
                                <select name="kategori" id="" class="form-control kategori-edit" data-value="{{ this.kategori }}">
                                    <option value="makanan">Makanan</option>
                                    <option value="minuman">Minuman</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Harga</label>
                                <input type="number" name="harga" class="form-control" value="{{ this.harga_produk }}">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                    
                    </form>

                </div>

            </div>

        </div>
    {{/each}}
</div>

{{> adminFooter }}