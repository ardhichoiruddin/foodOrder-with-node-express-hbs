{{> header }}
<div class="food-order">
    <div class="container-fluid x">
        <div class="row">
            <div class="col-lg-8 x">
                <div class="left-content left-bg-abu food-inner">
                    <div class="bg-food"></div>
                    <div class="d-flex d-flex align-items-center justify-content-between">
                        <div>
                            <a class="back-icon position-relative" href="/order"><img src="images/back-icon.svg" alt=""></a>
                        </div>
                        <h1 class="m-0 title-sec">{{ title }}</h1>
                    </div>

                    <div class="row margin-food">

                        {{#each foods}}
                            <div class="col-md-4 x">
                                <div class="box-food">
                                    <input class="checkeds position-absolute" value="{{ this.id_produk }}" type="checkbox">
                                    <div class="bg-svg position-absolute d-flex justify-content-center">
                                        <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg"
                                            xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 512 512"
                                            style="enable-background:new 0 0 512 512;" xml:space="preserve" width="100%"
                                            height="100%">
                                            <g>
                                                <g>
                                                </g>
                                                <g>
                                                    <g>
                                                        <path
                                                            d="M378.305,173.859c-5.857-5.856-15.355-5.856-21.212,0.001L224.634,306.319l-69.727-69.727    c-5.857-5.857-15.355-5.857-21.213,0c-5.858,5.857-5.858,15.355,0,21.213l80.333,80.333c2.929,2.929,6.768,4.393,10.606,4.393    c3.838,0,7.678-1.465,10.606-4.393l143.066-143.066C384.163,189.215,384.163,179.717,378.305,173.859z"
                                                            data-original="#05FF4B" class="active-path"></path>
                                                    </g>
                                                </g>
                                            </g>
                                        </svg>
                                    </div>
                                    <img src="/uploads/{{ this.food_image }}" alt="">
                                    <dib class="box-food-body">
                                        <div class="p-3">
                                            <div class="d-flex align-items-center">
                                                <img class="icon-title mr-2" src="images/minuman-small-icon.svg" alt="">
                                                <h1 class="m-0">{{ this.nama_produk }}</h1>
                                            </div>

                                            <p class="m-0 mt-2">Rp. {{ this.harga_produk }}</p>
                                        </div>
                                    </dib>
                                </div>
                            </div>
                        {{/each}}
                       
                    </div>

                </div>

            </div>
            <div class="col-lg-4 x">
                 {{> sidebarCart }}
            </div>
        </div>
    </div>
</div>

{{> footer }}